<Window x:Class="VkConversationBot.EXMPL.Windows.QuestionSetter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        WindowStyle="SingleBorderWindow"
        mc:Ignorable="d"
        Title="Quest Constructor" Height="250" Width="450"
        ResizeMode="NoResize">
    <Grid Margin="0,100,0,0">
        <TextBox Height="90" Width="200" x:Name="Question" Margin="-226,-180,0,0"> СООБЩЕНИЕ </TextBox>
        <TextBox Height="90" Width="200"  x:Name="Ans" Margin="226,-180,0,0"> ОТВЕТ </TextBox>
        <TextBox Height="35" Width="425" x:Name="Bw" Margin="0,-30,0,0"> ИСКЛЮЧЕНИЯ </TextBox>
        <Button x:Name="Create" Height="40" Width="260" Margin="-160,60,0,0" FontSize="10" Click="Set"> СОЗДАТЬ ЗАПРОС </Button>
        <ComboBox x:Name = "InfoType" Height="40" Width="150" Margin="275,60,0,0"> 
            <ComboBoxItem> Мне </ComboBoxItem>
            <ComboBoxItem> Пользователю </ComboBoxItem>
            <ComboBoxItem> Мне и пользователю </ComboBoxItem>
        </ComboBox>
        <Label Height="50" Width="50" FontSize="40" Margin="0,-200,-10,0"> > </Label>
    </Grid>
</Window>
